#include <stdio.h>
#include <string.h>

int countWords(char str[]);

int main (){
    
    char str[100];
    
    printf("Enter a string: ");
    scanf(" %[^\n]s", &str);
    
    
    printf("Number of words: %d", countWords(str));
}

int countWords(char str[]){

    int inWord = 0, wordCount = 0;
    
    for(int i = 0; str[i] != '\0'; i++){
        if(str[i] == ' '){
            if(inWord) {
                wordCount++;
                inWord = 0;
            }
        } else {
            inWord = 1;
        }
    }
    
    if(inWord){
        wordCount++;
    }
    
    return wordCount;
}
